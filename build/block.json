{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "gpb/guest-posts-block",
  "version": "1.0.0",
  "title": "Guest Posts Block",
  "category": "text",
  "icon": "welcome-write-blog",
  "description": "This plugin will allow authors to submit post on frontend.",
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "text": true,
      "gradient": true
    },
    "spacing": {
      "padding": true
    }
  },
  "example": {
    "attributes": {
      "title": "This is some text",
      "gradient": "red-to-blue",
      "shadow": true
    }
  },
  "textdomain": "guest-posts-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "styles": [
    {
      "name": "squared",
      "label": "Squared",
      "isDefault": true
    },
    {
      "name": "rounded",
      "label": "Rounded"
    }
  ],
  "attributes": {
    "title": {
      "type": "string",
      "source": "html",
      "selector": "p"
    },
    "textAlignment": {
      "type": "string",
      "default": "left"
    },
    "backgroundColor": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "gradient": {
      "type": "string",
      "default": true,
      "gradient": "red-to-blue"
    },
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#000",
          "text": "#fff"
        }
      }
    },
    "shadow": {
      "type": "boolean",
      "default": false
    },
    "shadowOpacity": {
      "type": "number",
      "default": 30
    }
  }
}